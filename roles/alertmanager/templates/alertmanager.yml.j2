global:
  resolve_timeout: 5m
  telegram_api_url: "https://api.telegram.org"

templates:
  - '/etc/alertmanager/*.tmpl'

receivers:
  - name: 'blackhole'
  - name: telegram
    telegram_configs:
      - chat_id: {{ telegram_chat_id }}
        bot_token: {{ telegram_bot_token }}
        api_url: "https://api.telegram.org"
        send_resolved: true
        parse_mode: HTML
        message: '{% raw %}{{ template "telegram.default" . }}{% endraw %}'

route:
  group_by: ['alertname']
  group_wait: 15s
  group_interval: 30s
  repeat_interval: 1h
  receiver: telegram
  routes:
    - receiver: telegram
      continue: true
    - receiver: blackhole
      matchers:
        - alertname="Watchdog"

